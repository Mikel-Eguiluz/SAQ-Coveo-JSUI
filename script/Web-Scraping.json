[
  {
    "for": {
      "urls": [
        ".*"
      ]
    },
    "exclude": [
      {
        "type": "CSS",
        "path": ".off-canvas-header"
      },
      {
        "type": "CSS",
        "path": ".related-products"
      },
      {
        "type": "CSS",
        "path": ".page-footer"
      },
      {
        "type": "CSS",
        "path": "#product-data-item-reviews"
      }
    ],
    "metadata": {
      "booze_name": {
        "type": "CSS",
        "path": ".product-info-main .page-title::text"
      },
      "booze_price": {
        "type": "CSS",
        "path": ".product-info-price .price::text"
      },
      "booze_price_amount": {
        "type": "XPATH",
        "path": "//head/meta[@property='product:price:amount']/@content"
      }      ,
      "booze_saq_code": {
        "type": "CSS",
        "path": "#product-data-item-additional strong[data-th='SAQ code']::text"
      },      
      "booze_image": {
        "type": "CSS",
        "path": "#mtImageContainer figure > img::attr(src)"
      },
      "booze_country": {
        "type": "CSS",
        "path": "#product-data-item-additional strong[data-th='Country']::text"
      },
      "booze_region": {
        "type": "CSS",
        "path": "#product-data-item-additional strong[data-th='Region']::text"
      },
      "booze_degree": {
        "type": "CSS",
        "path": "#product-data-item-additional strong[data-th='Degree of alcohol']::text"
      },
      "booze_size": {
        "type": "CSS",
        "path": "#product-data-item-additional strong[data-th='Size']::text"
      },
      "booze_availability": {
        "type": "XPATH",
        "path": "//head/meta[@property='product:availability']/@content"
      },
      "booze_category": {
        "type": "XPATH",
        "path": "//head/meta[@property='product:category']/@content"
      },
      "booze_rating": {
        "type": "CSS",
        "path": ".product-info-main span[itemprop='ratingValue']::text"
      },
      "booze_review_count": {
        "type": "CSS",
        "path": ".product-info-main span[itemprop='reviewCount']::text"
      }
    }
  }
]